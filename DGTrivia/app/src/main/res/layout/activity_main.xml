<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="danielmtz.app.code.com.dgetrivia.MainActivity">

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DGTrivia"
        android:textIsSelectable="false"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:id="@+id/button_jugar"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materias"
        android:id="@+id/button_materias"
        android:layout_below="@+id/button_jugar"
        android:layout_alignStart="@+id/button_jugar"
        android:layout_alignEnd="@+id/button_jugar"
        android:layout_alignLeft="@+id/button_jugar" />

    <Button
        android:text="SALIR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_materias"
        android:layout_alignStart="@+id/button_materias"
        android:layout_alignEnd="@+id/button_materias"
        android:id="@+id/button_salir" />
</RelativeLayout>
